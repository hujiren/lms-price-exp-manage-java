<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apl.lms.price.exp.manage.mapper.ComputationalFormulaMapper">

    <!--获取快递价格计算公式-->
    <select id="getList" resultType="com.apl.lms.price.exp.pojo.vo.ComputationalFormulaVo">
        select
            id, formula, zone_num, country, start_weight, end_weight, package_type
        from
        price_computational_formula
        where
            price_id = #{priceId}
    </select>

    <!--根据价格表id批量删除-->
    <delete id="deleteBatch">
        delete from price_computational_formula where id in
        <foreach collection="ids" separator="," open="(" close=")" item="row" index="">
            #{row}
        </foreach>
    </delete>
</mapper>